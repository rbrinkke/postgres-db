# =============================================================================
# Central PostgreSQL Database - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# =============================================================================

# PostgreSQL Superuser Password
POSTGRES_PASSWORD=postgres_secure_password_change_in_prod

# Auth API User Credentials (used by auth-api)
AUTH_API_USER=auth_api_user
AUTH_API_PASSWORD=auth_api_secure_password_change_in_prod

# Write API User Credentials (used by write-api, future)
WRITE_API_USER=write_api_user
WRITE_API_PASSWORD=write_api_secure_password_change_in_prod

# =============================================================================
# Connection Strings for API's
# =============================================================================
# Use these in your API .env files:
#
# Auth-API (.env):
# POSTGRES_HOST=postgres-db
# POSTGRES_PORT=5432
# POSTGRES_DB=activitydb
# POSTGRES_USER=auth_api_user
# POSTGRES_PASSWORD=auth_api_secure_password_change_in_prod
#
# Write-API (.env):
# POSTGRES_HOST=postgres-db
# POSTGRES_PORT=5432
# POSTGRES_DB=activitydb
# POSTGRES_USER=write_api_user
# POSTGRES_PASSWORD=write_api_secure_password_change_in_prod
# =============================================================================
